model Campaign {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  title            String
  description      String
  brand            String
  banner           String
  campaign_type    String
  budget           Float
  duration         DateTime
  content_type     String
  payout_deadline  String
  expected_metrics Json?
  other_fields     Json?
  rating           Float    @default(0)
  tasks            Task[]
  Review           Review[]

  @@map("campaigns")
}
