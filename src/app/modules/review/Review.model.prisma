model Review {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  userId       String    @db.ObjectId
  user         User      @relation("ReviewByUser", fields: [userId], references: [id], onDelete: Cascade)
  influencerId String?   @db.ObjectId
  influencer   User?     @relation("ReviewForInfluencer", fields: [influencerId], references: [id], onDelete: Cascade)
  campaignId   String?   @db.ObjectId
  campaign     Campaign? @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  rating       Float
  details      Json?

  @@map("reviews")
}
