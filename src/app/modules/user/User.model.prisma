model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  role      EUserRole @default(GUEST)
  name      String?
  email     String    @unique
  phone     String?
  avatar    String?
  address   String?
  socials   TSocial[]
  Auth      Auth?
  Otp       Otp?
  Task      Task[]

  @@map("users")
}

type TSocial {
  platform  String
  link      String
  followers Int    @default(0)
}

enum EUserRole {
  GUEST
  TALENT
  ADMIN
  SUB_ADMIN
}
