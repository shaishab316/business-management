model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  role      UserRole @default(USER)
  name      String?
  email     String   @unique
  phone     String?  @unique
  avatar    String?
  city      String?
  socials   String[]
  followers Int      @default(0)

  Auth Auth?
  Otp  Otp?

  @@map("users")
}

enum UserRole {
  GUEST
  USER
  ADMIN
  SUB_ADMIN
}
